{
    "name": "simple-crud-api",
    "version": "1.0.0",
    "description": "Simple CRUD Api",
    "keywords": [
        "NodeJs",
        "ExpressJs"
    ],
    "license": "ISC",
    "author": "Amit Shaw",
    "type": "module",
    "main": "src/server.ts",
    "scripts": {
        "build": "npx tsc",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "prepare": "husky",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier . --check",
        "format:write": "prettier . --write"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.20.0",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/lodash": "^4.17.15",
        "@types/node": "^22.13.4",
        "@types/pg": "^8.11.11",
        "cross-env": "^7.0.3",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ignore": [
            "node_modules"
        ],
        "ext": "js,json,ts",
        "exec": "tsx src/server.ts",
        "delay": "1000",
        "execMap": {
            "js": "node",
            "ts": "tsx"
        }
    },
    "lint-staged": {
        "*.{ts,js,cjs,mjs}": [
            "npm run lint:fix"
        ],
        "*.{ts,js,cjs,mjs,md,html,css,scss}": [
            "npm run format:write"
        ]
    },
    "dependencies": {
        "@types/cors": "^2.8.17",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "helmet": "^8.0.0",
        "joi": "^17.13.3",
        "lodash": "^4.17.21",
        "pg": "^8.13.3",
        "winston": "^3.17.0"
    }
}
